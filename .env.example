# LEXICON Environment Variables
# Copy this file to .env and fill in your API keys

# Core AI Provider API Keys (Required)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=AIza-your-google-api-key-here
SERPAPI_API_KEY=your-serpapi-key-here

# Optional Service API Keys
FIRECRAWL_API_KEY=fc-your-firecrawl-key-here
COURTLISTENER_API_KEY=your-courtlistener-key-here
PUBMED_API_KEY=your-pubmed-key-here

# Security Keys (auto-generated if not provided)
SECRET_KEY=your-secret-key-here-or-leave-blank-for-auto
CHROMA_AUTH_TOKEN=your-chroma-token-or-leave-blank-for-auto
REDIS_PASSWORD=your-redis-password-or-leave-blank-for-auto

# GitHub Integration (for MCP)
GITHUB_TOKEN=ghp_your-github-personal-access-token

# Frontend Configuration (if running React separately)
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SOCKET_URL=http://localhost:5000

# Infrastructure URLs (usually don't need to change)
REDIS_URL=redis://redis:6379
CHROMA_URL=http://chromadb:8000
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Application Settings
MAX_UPLOAD_SIZE=104857600
CORS_ORIGINS=http://localhost,https://localhost,http://localhost:3000
LOG_LEVEL=INFO
FLASK_ENV=production

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Docker Paths (Windows)
DOCKER_PATH=C:\Program Files\Docker\Docker\Docker Desktop.exe

# Data Storage Path
DATA_PATH=C:\Users\%USERNAME%\Documents\LEXICON